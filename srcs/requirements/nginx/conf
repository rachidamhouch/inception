server {

	listen 80;
	server_name www.ramhouch.42.fr ramhouch.42.fr;
	return 301 https://$host$request_uri;

}

server {

	listen 443 ssl;
	server_name www.ramhouch.42.fr ramhouch.42.fr;
	
	ssl_certificate /etc/nginx/ssl/ramhouch.pem;
	ssl_certificate_key /etc/nginx/ssl/ramhouch.key;
	ssl_protocols TLSv1.2 TLSv1.3;

	root /var/www/html/wordpress;
	index index.php index.html;

	location / {
		autoindex on;
		try_files $uri $uri/ =404;
	}
	location ~ \.php$ { 
        try_files $uri =404;
     	fastcgi_pass wordpress:9000;
        include fastcgi_params;
        fastcgi_param SCRIPT_FILENAME $document_root$fastcgi_script_name;
		fastcgi_param REDIS_HOST redis;
        fastcgi_param REDIS_PORT 6379;
        fastcgi_param WP_CACHE_KEY_SALT your_unique_salt; # replace with a unique salt
        fastcgi_param WP_CACHE_TIMEOUT 3600; # set your preferred cache timeout
        fastcgi_param WP_CACHE true;
    }

}